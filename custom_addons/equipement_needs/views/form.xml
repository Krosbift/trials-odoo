<odoo>
    <record id="view_equipement_needs_form" model="ir.ui.view">
      <field name="name">equipement.needs.form</field>
      <field name="model">equipement_needs.equipement_needs</field>
      <field name="arch" type="xml">
        <form string="Equipment Needs">
            <header>
                <!-- Aquí podríamos agregar estados y botones en el futuro -->
            </header>
