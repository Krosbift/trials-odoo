<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_equipement_needs_list" model="ir.ui.view">
    <field name="name">equipement.needs.list</field>
    <field name="model">equipement_needs.equipement_needs</field>
    <field name="type">list</field>
    <field name="arch" type="xml">
      <list string="Equipement needs" decoration-danger="quantity &lt;=0 or unit_cost &lt;=0">
        <field name="equipement"/>
        <field name="quantity"/>
        <field name="unit_cost"/>
        <field name="total_cost"/>
        <field name="priority"/>
        <field name="request_date"/>
        <field name="notes"/>
      </list>
    </field>
   </record> 
</odoo>

